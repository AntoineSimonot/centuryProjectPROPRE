<div class="tournament-content">
    {% for tournament in tournaments %}
        <div>
            <p>{{ tournament.name}}</p>
            <p>{{ tournament.description}}</p>
            <p>{{ tournament.date}}</p>
            <p>{{ tournament.price}}</p>
